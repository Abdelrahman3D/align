.align-sidebar
  position: absolute
  top: 0
  right: 0
  width: 200px
  height: 100%
  transform: translateX(100%)
  transition: 0.2s
  background-color: lighten($gray, 80%)
  padding: 90px 0

  &-field
    background: $white
    padding: 10px 5px
    label
      font-size: 12px
      line-height: 1em
      margin-bottom: 0.2em
      color: $gray
    input
      border: 1px solid $gray
      background: $white
    &:not(:last-child)
      border-bottom: 1px solid $gray


.align.is-sidebar-active
  .align-sidebar
    transform: translateX(0)
  .align-wrapper
    margin-right: 200px

.align-layout
  position: relative
  width: 150px
  height: 150px
  background: $white
  margin: auto
  &-padding
    position: absolute
    top: 0
    left: 0
    margin: 25%
    width: 50%
    height: 50%
    background: $white
    &:hover
      background: alpha($green, 10%)
  &-margin
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    &:hover
      background: alpha($orange, 10%)
  &-input
    position: absolute
    border: none
    text-align: center
    background: transparent
    width: 30px
    &.is-top
      left: 50%
      top: 3px
      transform: translate(-50%, 0)
    &.is-bottom
      left: 50%
      bottom: 3px
      transform: translate(-50%, 0)
    &.is-left
      left: 3px
      top: 50%
      transform: translate(0, -50%)
    &.is-right
      right: 3px
      top: 50%
      transform: translate(0, -50%)
