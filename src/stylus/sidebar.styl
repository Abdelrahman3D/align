.align-sidebar
  position: absolute
  top: 0
  right: 0
  width: 220px
  height: 100%
  transform: translateX(100%)
  transition: 0.2s
  background-color: $white
  padding: 90px 10px

  &-field
    background: $white
    padding: 10px 5px
    label
      font-size: 12px
      line-height: 1em
      margin-bottom: 0.2em
      color: $gray
    input
      border: 1px solid $gray
      background: $white
    &:not(:last-child)
      border-bottom: 1px solid $gray


.align.is-sidebar-active
  .align-sidebar
    transform: translateX(0)
  .align-wrapper
    margin-right: 220px

.align-layout
  position: relative
  width: 200px
  height: 150px
  background: $white
  margin: auto
  &:hover
    *:not(input)
      background: $white
  &-padding
    position: absolute
    top: 0
    left: 0
    margin: 37.5px 50px
    width: 50%
    height: 50%
    background: $white
    border: 1px dashed $black
    background: lighten($green, 90%)
    &:hover
      background: lighten($green, 90%) !important
  &-margin
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: 1px dashed $black
    background: lighten($orange, 90%)
    .align-layout-input
      height: 30px
    &:hover
      background: lighten($orange, 90%) !important
  &-input
    position: absolute
    border: none
    text-align: center
    background: transparent
    outline: none
    width: 40px
    font-size: 10px
    &.is-top
      left: 50%
      top: 3px
      transform: translate(-50%, 0)
    &.is-bottom
      left: 50%
      bottom: 3px
      transform: translate(-50%, 0)
    &.is-left
      left: 3px
      top: 50%
      transform: translate(0, -50%)
    &.is-right
      right: 3px
      top: 50%
      transform: translate(0, -50%)
