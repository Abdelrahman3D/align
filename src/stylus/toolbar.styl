.toolbar
  background-color: $dark
  padding: 5px
  margin: 0
  width: auto
  list-style: none
  border-radius: 20px
  @extends $flexCenter
  li
    &:not(last-child)
      padding-right: 5px
  
  &-button
    position: relative
    width: 30px
    height: 30px
    padding: 0
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    background-color: $white
    fill: $dark
    @extends $flexCenter

  &-list
    -webkit-appearance: none
    padding: 5px 10px
    height: 30px
    border-radius: 15px
    background-color: $white
    font-size: 15px
    line-height: 15px

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0