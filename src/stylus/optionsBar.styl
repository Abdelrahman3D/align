.optionsBar
  position: absolute
  z-index: 20
  left: 50%
  transform: translate3d(-50%, 0, 0)
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  margin: 0
  padding: 10px
  width: auto
  border-radius: 40px
  background-color: $white
  box-shadow: 0 0 25px alpha($black, 20%)
  list-style: none
  transition: opacity 0.2s
  &.is-visible
    visibility: visible
    opacity: 1

  &.is-hidden
    visibility: hidden
    opacity: 0

  &-button
    background-color: $white
    fill: $black
    position: relative
    width: 30px
    height: 30px
    padding: 5px
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    .icon
      fill: inherit

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
    top: 0
    right: 0
    bottom: 0
    left: 0
