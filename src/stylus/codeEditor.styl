.align-codeEditor
  position: relative
  width: 100%
  height: 200px
  padding: 20px
  &,
  *
    font-family: monospace
    font-size: 16px
    box-sizing: border-box
  &-wrapper
    position: relative
    width: 100%
    height: 100%
  &-textarea
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: 0
    margin: 0
    padding: 0
    caret-color: $dark
    color: transparent
    resize: none
    outline: none

  &-pre
    position: absolute
    top: 0
    left: 0
    width: 100%
    border: 0
    margin: 0
    padding: 0
    user-select: none
    pointer-events: none