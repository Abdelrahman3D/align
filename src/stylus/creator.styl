.creator
  left: 20px
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width: auto
  list-style: none
  transform: translate3d(0, -50%, 0)
  position: absolute
  z-index: 30
  border-radius: 40px
  >button
    background: $gray
    fill: $white


  &-menu
    list-style: none
    padding: 0
    display: none
 
  &-button
    position: relative
    margin: 0
    padding: 5px
    width: 30px
    height: 30px
    outline: none
    border: 0
    border-radius: 15px
    background-color: $transparent
    fill: $gray

    &:hover
      fill: $magenta

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
    top: 0
    right: 0
    bottom: 0
    left: 0
    -webkit-appearance: none
    -moz-appearance: textfield

  .icon
    fill: inherit

  &.is-active
    visibility: visible
    opacity: 1
    .creator-menu
      display: flex

  &.is-visible
    visibility: visible
    opacity: 1

  &.is-hidden
    visibility: hidden
    opacity: 0