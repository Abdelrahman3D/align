.creator
  position: absolute
  left: 0
  background-color: transparent
  margin: 0
  width: auto
  list-style: none
  display: flex
  justify-content: center
  align-items: center
  padding: 10px
  transform: translate3d(0, -50%, 0)
  &-button
    position: relative
    width: 30px
    height: 30px
    padding: 5px
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    background-color: $white
    fill: $gray
    &:hover
      fill: $magenta
  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0

  .icon
    fill: inherit

  &.is-active
    fill: $magenta

  &.is-visible
    opacity: 1
    visibility: visible

  &.is-hidden
    visibility: hidden
    opacity: 0
