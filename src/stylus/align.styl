.align
  position: relative
  width: 100%
  transition: 0.5s
  &-editor
    padding: 60px 0
    background-color: $white
    &:focus
      outline: none

  &.is-fullscreen
    height: 100vh
    width: 100%
    position: fixed
    top: 0
    right: 0
    left: 0
    bottom: 0
    z-index: 99999
    overflow: auto

  &-sectionUp
  &-sectionDown
    position: absolute
    top: 0
    left: 0
    display: none
    fill: $gray
    border: none
    background: transparent
    padding: 10px
    ~/-section.is-active &
      display: block
    &:hover
      fill: darken($gray, 30%)
  &-sectionDown
    top: auto
    top: initial
    bottom: 0

  &-sectionAdd
    position: absolute
    z-index: 30
    top: 0
    left: 50%
    transform: translate(-50%, 0)
    width: 70%
    max-width: 600px
    height: 3px
    background-color: $gray
    border: 0
    opacity: 0
    transition: 0.5s 0.1s
    cursor: pointer
    content: '+'
    &:after
      content: '+'
      display: block
      color: white
      width: 20px
      height: 20px
      background-color: $gray
      text-align: center
      line-height: 20px
      font-size: 15px
      border-radius: 0 0 10px 10px
      margin: auto 
    &.is-main
      opacity: 1
      position: static
    &:hover
      opacity: 1

  &-content
    width: 100%
    height: 100%
    p
      word-wrap: break-word

  &-figure
    transition: 0.2s

  &-section
    position: relative
    z-index: 1
    overflow: hidden
    transition: 0.2s
    *:focus
      outline: none
    &.is-active
      box-shadow: 0 0 25px alpha($black, 5%)
      border-radius: 4px
      .align-column:not(:last-child)
        border-right: 1px solid alpha($black, 5%)

  &-icon
    width: 20px
    height: 20px

  p:empty
    &::after
      font-style: italic
      color: $gray
      content: 'Content here...'
      font-size: 20px
      z-index: -1

  [data-align-html]
    whiteSpace: pre-wrap

  &-title
    margin: 10px 0
    &:empty::after
      font-style: italic
      color: $gray
      content: 'Post Title Here'

  [data-default-value]:empty
    &::after
      font-style: italic
      color: $gray
      content: attr(data-default-value)

  &-figure:not(.is-active)
    figcaption
      &::after
        display: none

