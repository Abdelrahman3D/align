.align
  position: relative
  &-content
    padding: 50px 0
    background-color: $white
    &:focus
      outline: none

  &.is-fullscreen
    height: 100vh
    overflow: auto

  &-title
    border: 0
    margin: 0 auto
    padding: 0.2em
    font-size: 40px
    height: 1.6em
    vertical-align: middle
    display: block
    resize: none
    &:focus
      outline: 0

  [data-default-value]:empty
    &::after
      font-style: italic
      color: $gray
      content: attr(data-default-value)

  &-figure:not(.is-active)
    figcaption
      &::after
        display: none

