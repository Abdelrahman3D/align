.align
  position: relative
  &-editor
    padding: 50px 0
    background-color: $white
    &:focus
      outline: none

  &.is-fullscreen
    height: 100vh
    width: 100%
    overflow: auto

  &-addButton
    display: block
    margin: auto
    font-size: 20px
    padding: 5px 20px
    background: alpha($black, 0.5)
    border: 0
    color: $white
    &:after
      display: block
      content: '+'
    &:hover
      background: $black

  &-newSection
    position: absolute
    z-index: 40
    top: -3px
    left: 50%
    transform: translateX(-50%)
    width: 70vw
    max-width: 600px
    height: 6px
    background-color: black
    border: 0
    opacity: 0.01
    transition: 0.5s 0.2s
    cursor: pointer
    &.is-main
      opacity: 1
      position: static
    &:hover
      opacity: 1

  &-content
    position: relative
    z-index: 1
    width: 100%
    height: 100%
    overflow: hidden
  &-section
    position: relative
    *:focus
      outline: none
    &.is-active
      outline: 2px solid $blue

  p:empty
    &::after
      font-style: italic
      color: $gray
      content: 'Your awesome content here!'
      font-size: 20px

  &-title
    &:empty::after
      font-style: italic
      color: $gray
      content: 'Post Title Here'

  [data-default-value]:empty
    &::after
      font-style: italic
      color: $gray
      content: attr(data-default-value)

  &-figure:not(.is-active)
    figcaption
      &::after
        display: none

