.align
  position: relative
  width: 100%
  &-editor
    padding: 50px 0
    background-color: $white
    &:focus
      outline: none

  &.is-fullscreen
    height: 100vh
    width: 100%
    overflow: auto

  &-addButton
    display: block
    font-size: 18px
    padding: 10px
    width: 70%
    margin: 20px auto
    border: 2px dashed $gray
    color: $gray
    background: $white
    &:after
      display: block
      content: 'Add section'
    &:active
      outline: 0
    &:hover
      color: $black

  &-newSection
    position: absolute
    z-index: 30
    top: -3px
    left: 50%
    transform: translateX(-50%)
    width: 70%
    max-width: 600px
    height: 6px
    background-color: gray
    border: 0
    opacity: 0.01
    transition: 0.5s 0.2s
    cursor: pointer
    &.is-main
      opacity: 1
      position: static
    &:hover
      opacity: 1

  &-content
    width: 100%
    height: 100%
    p
      word-wrap: break-word
  &-section
    position: relative
    z-index: 1
    overflow: hidden
    transition: 0.2s
    *:focus
      outline: none
    &.is-active
      box-shadow: 0 0 25px alpha($black, 5%)
      border-radius: 4px
      .align-column:not(:last-child)
        border-right: 1px solid alpha($black, 5%)

  p:empty
    &::after
      font-style: italic
      color: $gray
      content: 'Content here...'
      font-size: 20px
      z-index: -1

  [data-align-html]
    whiteSpace: pre-wrap

  &-title
    &:empty::after
      font-style: italic
      color: $gray
      content: 'Post Title Here'

  [data-default-value]:empty
    &::after
      font-style: italic
      color: $gray
      content: attr(data-default-value)

  &-figure:not(.is-active)
    figcaption
      &::after
        display: none

