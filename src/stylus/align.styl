.align
  position: relative
  &-content
    padding: 50px 100px
    overflow: auto
    white-space: normal
    p
      line-height: 2em
      font-size: 18px
    &:focus
      outline: none

  &-title
    border: 0
    margin: 50px auto 0
    padding: 0.2em
    font-size: 40px
    height: 1.6em
    vertical-align: middle
    display: block
    resize: none
    &:focus
      outline: 0


  &-figure
    text-align: center
    &.is-active
      img
        box-shadow: 0 0 25px alpha($black, 5%)
    &.is-normal
      img
        width: 100%
        max-width: 500px
    &.is-float
      float: left
      &:after
        content: ''
        display: block
        clear: both
      img
        width: 50vw
        max-width: 500px
    &.is-full
      margin: auto -100px
      height: 500px
      overflow: hidden
      img
        width: 100vw
