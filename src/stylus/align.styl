.align
  position: relative
  &-content
    padding: 50px 0
    background-color: $white
    &:focus
      outline: none

  &.is-fullscreen
    height: 100vh
    width: 100%
    overflow: auto

  &-section
    overflow: hidden
    position: relative
    z-index: 1
    &.is-active
      outline: 2px solid $blue
    &:empty
      &::after
        font-style: italic
        color: $gray
        content: 'your content here'
        font-size: 50px

  &-title
    border: 0
    margin: 0 auto
    padding: 0.2em
    font-size: 40px
    height: 1.6em
    vertical-align: middle
    display: block
    resize: none
    &:focus
      outline: 0

  [data-default-value]:empty
    &::after
      font-style: italic
      color: $gray
      content: attr(data-default-value)

  &-figure:not(.is-active)
    figcaption
      &::after
        display: none

