.align
  position: relative
  &-content
    &:focus
      outline: none

  &-title
    border: 0
    margin: 50px auto 0
    padding: 0.2em
    font-size: 40px
    height: 1.6em
    vertical-align: middle
    display: block
    resize: none
    &:focus
      outline: 0


  [data-default-value]:empty
    &::after
      font-style: italic
      color: $gray
      content: attr(data-default-value)

  &-figure:not(.is-active)
    figcaption
      &::after
        display: none

