.styler
  background-color: $white
  margin: 0
  width: auto
  list-style: none
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  padding: 10px

  &.is-toolbar
    position: sticky
    top: 0
    right: 0
    left: 0
    z-index: 20
    box-shadow: 0 20px 25px -20px alpha($black, 5%)
    .styler-button
      background-color: $white
      fill: $black
      &.is-active
        fill: $magenta

  &.is-bubble
    background-color: $black
    position: fixed
    z-index: 10
    border-radius: 40px
    box-shadow: 0 0 25px alpha($black, 5%)
    .styler-button
      background-color: $black
      fill: $white
      &.is-active
        fill: $magenta

  li
    &:not(last-child)
      margin-right: 1px
  &.is-visible
    opacity: 1
    visibility: visible

  &.is-hidden
    visibility: hidden
    opacity: 0
  
  &-separator
    content: '|'
    padding: 0 10px

  &-button
    position: relative
    width: 30px
    height: 30px
    padding: 5px
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    .icon
      fill: inherit

  &-list
    -webkit-appearance: none
    padding: 5px 10px
    height: 30px
    border-radius: 15px
    background-color: $white
    font-size: 15px
    line-height: 15px

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0

  .icon
    width: 20px
    height: 20px

  &-select
    margin: 0 7px
    svg
      width: 18px
      height: 18px
      margin: 6px 0
      float: right
    select
      appearance: none
      height: 30px
      border-radius: 0
      padding: 2px 5px
      line-height: 26px
      background: $white
      text-align: center
      border-width: 0
      border-color: $dark
      font-size: 14px
      border-bottom: 1px solid $white
      &:focus
        outline: none

  &.is-visiable
    display: flex