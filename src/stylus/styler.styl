.styler
  background-color: $white
  box-shadow: 0 20px 25px -20px alpha($black, 20%)
  display: flex

  &-menu
    &,
    ul
      margin: 0
      padding: 0
      width: auto
      list-style: none
      display: flex
      flex-wrap: wrap
      justify-content: center
      align-items: center
      user-select: none

  &-button
    background-color: $white
    fill: $black
    position: relative
    width: 30px
    height: 30px
    padding: 5px
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    .icon
      fill: inherit

    &.is-active
      fill: $magenta

  .picker-guide
    width: 30px
    height: 30px
    padding: 5px
    svg
      color: $black
  
  &-separator
    content: '|'
    padding: 0 10px

  &-list
    -webkit-appearance: none
    padding: 5px 10px
    height: 30px
    border-radius: 15px
    background-color: $white
    font-size: 15px
    line-height: 15px

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
    top: 0
    right: 0
    bottom: 0
    left: 0

  .icon
    width: 20px
    height: 20px

  &-select
    position: relative
    margin: 0 7px
    svg
      position: absolute
      top: 0
      right: 0
      width: 18px
      height: 18px
      margin: 6px 0
      z-index: -1
      fill: currentColor
    select
      appearance: none
      height: 30px
      border-radius: 0
      padding: 2px 23px 2px 5px
      line-height: 26px
      background: transparent
      text-align: center
      border-width: 0
      font-size: 14px
      color: currentColor
      &:focus
        outline: none

  &.is-visiable
    display: flex


  &.is-dark
    background-color: $black
    color: $white
    .styler-button
      background-color: $black
      fill: $white
      &.is-active
        fill: $magenta
    .styler-select
      color: $white
    .styler-icon
      color: $white !important
    .picker-guide svg
      color: $white
    [data-tooltip]
      &:before
        border-color: transparent transparent $white transparent
      &:after
        background-color: $white
        color: $black

  &.is-toolbar
    position: sticky
    width: 100%
    top: 0
    right: 0
    left: 0
    z-index: 50
    padding: 10px
    
  &.is-bubble
    padding: 10px
    top: 0
    left: 0
    position: absolute
    z-index: 40
    border-radius: 40px
    margin-top: -10px
    box-shadow: 0 0 25px alpha($black, 5%)
    transition: 0.2s

  &.is-creator
    top: 0
    left: 0
    position: absolute
    z-index: 30
    .styler-menu
      display: none

  &.is-active
    .styler-menu
      display: flex

  &.is-visible
    opacity: 1
    visibility: visible

  &.is-hidden
    visibility: hidden
    opacity: 0