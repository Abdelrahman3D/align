.styler
  background-color: $black
  margin: 0
  width: auto
  list-style: none
  display: flex
  justify-content: center
  align-items: center
  &.is-default
    position: fixed
    top: 0
    right: 0
    left: 0
    padding: 20px 0
    
  &.is-bubble
    border-radius: 40px
    padding: 10px
    margin-bottom: 50px
  li
    &:not(last-child)
      margin-right: 1px
  &.is-visible
    opacity: 1
    visibility: visible

  &.is-hidden
    visibility: hidden
    opacity: 0
  
  &-separator
    content: '|'
    padding: 0 10px

  &-button
    position: relative
    width: 30px
    height: 30px
    padding: 0
    margin: 0
    border-radius: 15px
    border: 0
    outline: none
    background-color: $black
    fill: $white
    &.is-active
      fill: $blue

  &-list
    -webkit-appearance: none
    padding: 5px 10px
    height: 30px
    border-radius: 15px
    background-color: $white
    font-size: 15px
    line-height: 15px

  &-input
    position: absolute
    width: 100%
    height: 100%
    opacity: 0

  &-select
    appearance: none
    height: 30px
    border-radius: 0
    padding: 2px 5px
    margin: 0 7px
    line-height: 26px
    background: $white
    text-align: center
    border-width: 0
    border-color: $dark
    font-size: 14px
    border-bottom: 1px solid $black
    &:hover
      border-bottom-color: $blue
    &:focus
      outline: none

  &.is-visiable
    display: flex