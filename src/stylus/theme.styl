@import 'variables'

.align
  &-editor
    white-space: normal
    line-height: 2em
    font-size: 18px

  &-image
    width: 100%
    max-width: 400px

  iframe
    border: 0

  blockquote
    border-left: 5px solid #AAAAAA
    padding: 10px 0 10px 20px

  hr
    border: 0
    text-align: center
    font-size: 2em
    line-height: 1
    margin: 20px 0
    vertical-align: text-top
    margin: 0
    letter-spacing: 0.5em
    &:before
      display: block
      content: '...'


  &-figure
    margin: 20px auto
    text-align: center
    font-size: 12px
    figcaption
      &:focus
        outline: none
    img
      width: 100%
      max-width: 100%
    &.is-active
      img
        box-shadow: 0 0 25px alpha($black, 5%)
    &.is-normal
      max-width: 500px
    &.is-float
      float: left
      margin-right: 40px
      max-width: 500px
      width: 50vw
      &:after
        display: block
        clear: both
        content: ' '
    &.is-full
      width: 100%
      max-width: 100%
      

  &-content
    padding: 20px
  &-title
    text-align: center

  &-section
    margin: auto
    width: 70vw
    &.is-full
      width: 100%
      max-width: 100%
    &.is-image
      background-position: center center
      background-size: cover
      background-attachment: fixed
      min-height: 300px
      margin: 20px 0
      padding: 20px

  &-bgVideo
  &-bgImage
    position: absolute
    z-index: -1
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-repeat: no-repeat
    background-size: cover
    background-position: center center
    min-width: 100%
    min-height: 100%
    opacity: 0.5
