.align
  blockquote
    border-left: 5px solid #AAAAAA
    padding: 10px 0 10px 20px

  hr
    border: 0
    text-align: center
    font-size: 2em
    line-height: 1
    margin: 20px 0
    vertical-align: text-top
    margin: 0
    letter-spacing: 0.5em
    &:before
      display: block
      content: '...'


  &-figure
    text-align: center

    &.is-active
      img
        box-shadow: 0 0 25px alpha($black, 5%)

    &.is-normal
      img
        max-width: 500px
        width: 100%

    &.is-float
      float: left
      &:after
        display: block
        clear: both
        content: ''
      img
        max-width: 500px
        width: 50vw

    &.is-full
      overflow: hidden
      margin: auto -100px
      img
        width: 100vw
